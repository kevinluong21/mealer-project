        <activity
            android:name=".Search"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".UserWelcome">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ReviewMealsActivity"
            android:exported="false"
